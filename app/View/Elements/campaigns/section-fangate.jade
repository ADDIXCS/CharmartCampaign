//- lead文
:php
  | $leadText = CampaignValue::${$campaign['campaign_type']}['entryBtnDefaultText'];
//- Facebookのファンゲートの表示状態
- $facebook_fangate_flg = false;
- if($currentAccount['Account']['facebook_id']):
  - if($this->Soraps->isPreview()):
    - $facebook_fangate_flg = true;
  - elseif($this->request->params['entryType'] == 'facebook' && $campaign['facebook_fangate_flg']):
    - $facebook_fangate_flg = true;
  - endif;
- endif;
//- Facebookのファンゲートを表示
- if($facebook_fangate_flg && empty($isConfirm)):
  #section-fangate.section-bg-dark(ng-show="facebook_entry_flg && facebook_fangate_flg")
    .container
      .section.section-bg-dark.separator-triangle.text-center
        .page-header
          - if($this->Soraps->isPreview()):
            p.text-danger Facebookで応募の場合のみ表示されます
          - endif;
          p.h2 主催者ページに「いいね！」をして#{$leadText}
        .row
          .col-sm-4.col-sm-offset-2
            - $facebookPageData = $Facebook->api('/' . $currentAccount['Account']['facebook_id']);
            a(href="#{$facebookPageData['link']}", target="_blank")
              img(src="//graph.facebook.com/#{$currentAccount['Account']['facebook_id']}/picture?type=large")
              br
              #{$facebookPageData['name']}
          .col-sm-3
            #like-btn-wrapper.separator-triangle
              .fb-like(data-href="#{$currentAccount['Account']['facebook_page_url']}", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
- endif;

//- Twitterのファンゲートの表示状態
- $twitter_fangate_flg = false;
- if($currentAccount['Account']['twitter_id']):
  - if($this->Soraps->isPreview()):
    - $twitter_fangate_flg = true;
  - elseif($this->request->params['entryType'] == 'twitter' && $campaign['twitter_fangate_flg']):
    - $twitter_fangate_flg = true;
  - endif;
- endif;
//- Twitterのファンゲートを表示
- if($twitter_fangate_flg && empty($isConfirm)):
  #section-fangate.section-bg-dark(ng-show="twitter_entry_flg && twitter_fangate_flg")
    .container
      .section.section-bg-dark.separator-triangle.text-center
        .page-header
          - if($this->Soraps->isPreview()):
            p.text-danger Twitterで応募の場合のみ表示されます
          - endif;
          p.h2 #{$leadText}と自動で次のアカウントをフォローします
        .row
          .col-sm-6.col-sm-offset-3
            - $twitterUserData = $Twitter->getUserData($currentAccount['Account']['twitter_screen_name']);
            a(href="//twitter.com/#{$currentAccount['Account']['twitter_screen_name']}", target="_blank")
              img(src="#{str_replace(['https:', '_normal'], '', $twitterUserData->profile_image_url_https)}")
              br
              #{$twitterUserData->name}
- endif;
